<% provide(:title, "Seja Bem-vindo!") %>
<title><%= yield(:title) %></title>
<center>
	<div class="span12">
		<div class="center jumbotron">
			<img src="/assets/LogoComSombra.png">
			<br>
			<img src="/assets/NomeLogo.png">
			<h1>	
			<% if signed_in? %>
				<h1>Seja bem-vindo,  <%= current_user.name_user %>.</h1>
			<% else %>
				Novo? <%= link_to "Registre-se!", signup_path %></br>
				<%= link_to "Logar", signin_path %></br>
			<% end %>
			</h1>
		</div>
	</div>
</center>
